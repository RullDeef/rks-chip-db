<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="ru.spacecorp.mobdekbkp.web.company.CompanyEdit"
        datasource="companyDs"
        focusComponent="companyFieldGroup"
        messagesPack="ru.spacecorp.mobdekbkp.web.company">
    <dsContext>
        <datasource id="companyDs"
                    class="ru.spacecorp.mobdekbkp.entity.Company"
                    view="company-view">
            <collectionDatasource id="licensesDs"
                                  property="licenses"/>
            <collectionDatasource id="typesDs"
                                  property="types"/>
        </datasource>
    </dsContext>
    <dialogMode height="100%"
                width="100%"/>
    <layout expand="vbox"
            spacing="true">
        <vbox id="vbox"
              align="MIDDLE_CENTER"
              expand="rootTabShhet"
              margin="true,false,true,false"
              responsive="true"
              spacing="true">
            <tabSheet id="rootTabShhet">
                <tab id="mainTab"
                     caption="msg://mainTabName"
                     margin="true,false,false,false"
                     spacing="true">
                    <hbox height="100%"
                          spacing="true"
                          width="100%">
                        <vbox height="100%"
                              spacing="true">
                            <scrollBox height="100%">
                                <groupBox id="mainInfoBox"
                                          caption="msg://mainProperties"
                                          spacing="true">
                                    <fieldGroup id="companyFieldGroup"
                                                datasource="companyDs"
                                                width="100%">
                                        <column width="250px">
                                            <field property="country"/>
                                            <field property="name"/>
                                            <field property="nameShort"/>
                                            <field property="genDir"/>
                                            <field property="addressFact"/>
                                            <field property="addressLegal"/>
                                            <field property="phone"/>
                                            <field property="fax"/>
                                            <field property="email"/>
                                            <field property="website"/>
                                        </column>
                                    </fieldGroup>
                                </groupBox>
                            </scrollBox>
                        </vbox>
                        <vbox height="100%"
                              spacing="true">
                            <groupBox id="typesBox"
                                      caption="msg://ru.spacecorp.mobdekbkp.entity/Company.types">
                                <table id="typesTable"
                                       columnHeaderVisible="false"
                                       height="200px"
                                       width="100%">
                                    <actions>
                                        <action id="create"
                                                caption="msg://btnCreate"/>
                                        <action id="remove"/>
                                    </actions>
                                    <columns>
                                        <column id="type"/>
                                    </columns>
                                    <rows datasource="typesDs"/>
                                    <buttonsPanel id="typesButtonPanel">
                                        <button id="btnTypeCreate"
                                                action="typesTable.create"/>
                                        <button id="btnTypeRemove"
                                                action="typesTable.remove"/>
                                    </buttonsPanel>
                                </table>
                            </groupBox>
                        </vbox>
                    </hbox>
                </tab>
                <tab id="juristicTab"
                     caption="msg://juristicTabName"
                     margin="true,false,false,false"
                     spacing="true">
                    <groupBox spacing="true">
                        <fieldGroup datasource="companyDs"
                                    height="100%"
                                    width="100%">
                            <column width="100%">
                                <field property="ogrn"/>
                                <field property="okato"/>
                                <field property="inn"/>
                                <field property="okpo"/>
                                <field property="kpp"/>
                            </column>
                        </fieldGroup>
                    </groupBox>
                </tab>
                <tab id="licenseTab"
                     caption="msg://licenseTabName"
                     margin="true,false,false,false"
                     spacing="true">
                    <table id="licensesTable"
                           height="100%"
                           width="100%">
                        <actions>
                            <action id="create"
                                    caption="msg://btnCreate"/>
                            <action id="edit"
                                    caption="msg://btnEdit"/>
                            <action id="remove"/>
                        </actions>
                        <columns>
                            <column id="number"/>
                            <column id="dateObtained"/>
                            <column id="dateExpire"/>
                            <column id="issued"/>
                        </columns>
                        <rows datasource="licensesDs"/>
                        <buttonsPanel id="licensesButtonsPanel">
                            <button id="btnLicenseCreate"
                                    action="licensesTable.create"/>
                            <button id="btnLicenseEdit"
                                    action="licensesTable.edit"/>
                            <button id="btnLicenseRemove"
                                    action="licensesTable.remove"/>
                        </buttonsPanel>
                    </table>
                </tab>
                <tab id="socialTab"
                     caption="msg://socialTab"
                     margin="true,false,false,false"
                     spacing="true">
                    <tabSheet id="socialTabSheet"
                              height="100%">
                        <tab id="reviewTab"
                             caption="msg://reviewsTabName"
                             margin="true,false,false,false"
                             spacing="true">
                            <frame id="reviews"
                                   height="100%"
                                   screen="reviewsFrame"/>
                        </tab>
                        <tab id="commentsTab"
                             caption="msg://comment"
                             margin="true,false,false,false"
                             spacing="true">
                            <frame id="comments"
                                   height="100%"
                                   screen="discuss$Comment.browse"/>
                        </tab>
                    </tabSheet>
                </tab>
            </tabSheet>
        </vbox>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
