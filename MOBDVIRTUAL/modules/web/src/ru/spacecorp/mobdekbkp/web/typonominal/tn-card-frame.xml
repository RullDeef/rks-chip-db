<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        class="ru.spacecorp.mobdekbkp.web.typonominal.TnCardFrame"
        messagesPack="ru.spacecorp.mobdekbkp.web.typonominal">
    <dialogMode height="100%"
                width="100%"/>
    <layout>
        <groupBox id="gbInfo"
                  caption="msg://tnInfo"
                  expand="tbsInformation"
                  height="100%"
                  spacing="true">
            <frame id="fHierarchy"
                   screen="full-hierarchy-info"/>
            <tabSheet id="tbsInformation"
                      stylename="mutilinetabsheet framed">
                <tab id="tabPurchParams"
                     caption="msg://ru.spacecorp.mobdekbkp.entity/TyponominalPurchaseParameters"
                     margin="true,false,false,false"
                     spacing="true">
                    <frame id="fPurchaseParameters"
                           height="100%"
                           screen="mobdekbkp$TnParametersForPurchasing"/>
                </tab>
                <tab id="tabEnterprises"
                     caption="msg://Tab"
                     margin="true,false,false,false"
                     spacing="true">
                    <frame id="frameEnterprises"
                           height="100%"
                           screen="typeFrameEnterprises"/>
                </tab>
                <tab id="tabDiscuss"
                     caption="msg://TabComments"
                     margin="true,false,false,false"
                     spacing="true">
                    <frame id="fComments"
                           enable="false"
                           height="100%"
                           screen="frameComment"/>
                </tab>
            </tabSheet>
        </groupBox>
    </layout>
</window>
