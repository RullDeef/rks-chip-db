<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="ru.spacecorp.mobdekbkp.web.basicinformation.BasicInformationEdit"
        datasource="basicInformationDs"
        focusComponent="fieldGroup"
        messagesPack="ru.spacecorp.mobdekbkp.web.basicinformation">
    <dsContext>
        <datasource id="basicInformationDs"
                    class="ru.spacecorp.mobdekbkp.entity.BasicInformation"
                    view="basic-information-view"/>
    </dsContext>
    <dialogMode height="150"
                width="500"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    align="MIDDLE_CENTER"
                    datasource="basicInformationDs">
            <column width="250px">
                <field property="functionality"/>
                <field property="levelQuality"/>
                <field property="levelQualityImport"/>
                <field property="in_the_list_0122"/>
                <field property="in_the_list_EKB_K"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               align="MIDDLE_CENTER"
               screen="editWindowActions"
               width="AUTO"/>
    </layout>
</window>
