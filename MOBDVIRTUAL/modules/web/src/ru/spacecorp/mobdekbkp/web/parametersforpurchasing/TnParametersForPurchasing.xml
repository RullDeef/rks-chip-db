<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        class="ru.spacecorp.mobdekbkp.web.parametersforpurchasing.TnParametersForPurchasing"
        messagesPack="ru.spacecorp.mobdekbkp.web.typonominal">
    <dsContext>
        <datasource id="parametersForPurchasingDs"
                    class="ru.spacecorp.mobdekbkp.entity.ParametersForPurchasing"
                    view="parametersForPurchasing-view"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout>
        <scrollBox height="100%">
            <groupBox spacing="true">
                <hbox spacing="true"
                      width="100%">
                    <label align="MIDDLE_CENTER"
                           value="msg://deliveryTime"
                           width="100%"/>
                    <textField id="tfdeliveryTime"
                               width="100%"/>
                </hbox>
                <hbox spacing="true"
                      width="100%">
                    <label align="MIDDLE_CENTER"
                           value="msg://productPrice"
                           width="100%"/>
                    <textField id="tfproductPrice"
                               width="100%"/>
                    <button id="btproductPrice"
                            caption="msg://AddChange"
                            invoke="onBtproductPriceClick"
                            width="100%"/>
                </hbox>
                <hbox spacing="true"
                      width="100%">
                    <textArea id="tadeliveryTerm"
                              caption="msg://deliveryTerm"
                              width="100%"/>
                </hbox>
                <hbox spacing="true"
                      width="100%">
                    <button id="btdeliveryTerm"
                            caption="msg://AddChange"
                            invoke="onBtdeliveryTermClick"
                            width="33%"/>
                </hbox>
            </groupBox>
        </scrollBox>
    </layout>
</window>
