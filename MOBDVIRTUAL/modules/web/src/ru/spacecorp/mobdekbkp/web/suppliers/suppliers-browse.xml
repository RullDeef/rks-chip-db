<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="ru.spacecorp.mobdekbkp.web.suppliers.SuppliersBrowse"
        focusComponent="suppliersTable"
        lookupComponent="suppliersTable"
        messagesPack="ru.spacecorp.mobdekbkp.web.suppliers">
    <dsContext>
        <groupDatasource id="suppliersCollectionDs"
                         class="ru.spacecorp.mobdekbkp.entity.Suppliers"
                         view="suppliers-view">
            <query>
                <![CDATA[select e from mobdekbkp$Suppliers e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="mainLayout">
        <grid id="mainLayout"
              spacing="true"
              width="100%">
            <columns count="1"/>
            <rows>
                <row>
                    <vbox expand="suppliersTable"
                          height="100%"
                          spacing="true">
                        <hbox id="upPanelHbox"
                              expand="filter"
                              spacing="true"
                              width="100%">
                            <buttonsPanel id="buttonsPanel"
                                          align="MIDDLE_LEFT"
                                          alwaysVisible="true">
                                <button id="createBtn"
                                        action="suppliersTable.create"
                                        width="100%"/>
                                <button id="editBtn"
                                        action="suppliersTable.edit"
                                        width="100%"/>
                                <button id="removeBtn"
                                        action="suppliersTable.remove"
                                        width="100%"/>
                                <button id="excelBtn"
                                        action="suppliersTable.excel"
                                        width="100%"/>
                            </buttonsPanel>
                            <filter id="filter"
                                    align="MIDDLE_LEFT"
                                    applyTo="suppliersTable"
                                    datasource="suppliersCollectionDs">
                                <properties include=".*"/>
                            </filter>
                        </hbox>
                        <groupTable id="suppliersTable"
                                    width="100%">
                            <actions>
                                <action id="create"/>
                                <action id="edit"/>
                                <action id="remove"/>
                                <action id="excel"/>
                            </actions>
                            <columns>
                                <column id="name"/>
                            </columns>
                            <rows datasource="suppliersCollectionDs"/>
                        </groupTable>
                    </vbox>
                </row>
            </rows>
        </grid>
        <tabSheet id="dopAttrTabSheet"
                  align="BOTTOM_LEFT"
                  height="250px">
            <tab id="mainInfoTab"
                 caption="msg://mainInfo"
                 margin="true">
                <hbox id="mainInfoHbox"
                      height="100%"
                      spacing="true"
                      width="100%">
                    <groupBox id="mainInfoLeftGroupBox"
                              height="100%">
                        <hbox id="countryHbox"
                              spacing="true"
                              width="100%">
                            <label id="countryLbl"
                                   value="msg://country"
                                   width="100%"/>
                            <textField id="countryField"
                                       datasource="suppliersCollectionDs"
                                       property="country"
                                       width="100%"/>
                        </hbox>
                        <hbox id="gendirHbox"
                              spacing="true"
                              width="100%">
                            <label id="gendirLbl"
                                   value="msg://gendir"
                                   width="100%"/>
                            <textField id="gendirField"
                                       datasource="suppliersCollectionDs"
                                       property="genDirector"
                                       width="100%"/>
                        </hbox>
                        <hbox id="nameShortHbox"
                              spacing="true"
                              width="100%">
                            <label id="nameShortLbl"
                                   align="MIDDLE_LEFT"
                                   value="msg://ru.spacecorp.mobdekbkp.entity/Company.nameShort"/>
                            <textField id="nameShortField"
                                       align="MIDDLE_LEFT"
                                       datasource="suppliersCollectionDs"
                                       editable="false"
                                       property="nameShort"
                                       width="100%"/>
                        </hbox>
                        <hbox id="phoneHbox"
                              spacing="true"
                              width="100%">
                            <label id="phoneLbl"
                                   align="MIDDLE_LEFT"
                                   value="msg://ru.spacecorp.mobdekbkp.entity/Company.phone"/>
                            <textField id="phoneField"
                                       align="MIDDLE_LEFT"
                                       datasource="suppliersCollectionDs"
                                       editable="false"
                                       property="phone"
                                       width="100%"/>
                        </hbox>
                        <hbox id="faxHbox"
                              spacing="true"
                              width="100%">
                            <label id="faxLbl"
                                   align="MIDDLE_LEFT"
                                   value="msg://ru.spacecorp.mobdekbkp.entity/Company.fax"/>
                            <textField id="faxField"
                                       align="MIDDLE_LEFT"
                                       datasource="suppliersCollectionDs"
                                       editable="false"
                                       property="fax"
                                       width="100%"/>
                        </hbox>
                    </groupBox>
                    <groupBox id="mainInfoRightGroupBox"
                              height="100%">
                        <hbox id="emailHbox"
                              spacing="true"
                              width="100%">
                            <label id="emailLbl"
                                   align="MIDDLE_LEFT"
                                   value="msg://ru.spacecorp.mobdekbkp.entity/Company.email"/>
                            <textField id="emailField"
                                       align="MIDDLE_LEFT"
                                       datasource="suppliersCollectionDs"
                                       editable="false"
                                       property="email"
                                       width="100%"/>
                        </hbox>
                        <hbox id="addressLegalHbox"
                              spacing="true"
                              width="100%">
                            <label id="addressLegalLbl"
                                   align="MIDDLE_LEFT"
                                   value="msg://ru.spacecorp.mobdekbkp.entity/Company.addressLegal"/>
                            <textField id="addressLegalField"
                                       align="MIDDLE_LEFT"
                                       datasource="suppliersCollectionDs"
                                       editable="false"
                                       property="addressLegal"
                                       width="100%"/>
                        </hbox>
                        <hbox id="addressFactHbox"
                              spacing="true"
                              width="100%">
                            <label id="addressFactLbl"
                                   align="MIDDLE_LEFT"
                                   value="msg://ru.spacecorp.mobdekbkp.entity/Company.addressFact"/>
                            <textField id="addressFactField"
                                       align="MIDDLE_LEFT"
                                       datasource="suppliersCollectionDs"
                                       editable="false"
                                       property="addressFact"
                                       width="100%"/>
                        </hbox>
                        <hbox id="websiteHbox"
                              spacing="true"
                              width="100%">
                            <label id="websiteLbl"
                                   align="MIDDLE_LEFT"
                                   value="msg://ru.spacecorp.mobdekbkp.entity/Company.website"/>
                            <textField id="websiteField"
                                       align="MIDDLE_LEFT"
                                       datasource="suppliersCollectionDs"
                                       editable="false"
                                       property="website"
                                       width="100%"/>
                        </hbox>
                    </groupBox>
                </hbox>
            </tab>
            <tab id="detailsTab"
                 caption="msg://details"
                 margin="true"
                 spacing="true">
                <groupBox id="detailsGroupBox"
                          height="100%"
                          width="AUTO">
                    <hbox id="ogrnHbox"
                          spacing="true">
                        <label id="ogrnLbl"
                               align="MIDDLE_LEFT"
                               value="msg://ru.spacecorp.mobdekbkp.entity/Company.ogrn"
                               width="50px"/>
                        <textField id="ogrnField"
                                   align="MIDDLE_LEFT"
                                   datasource="suppliersCollectionDs"
                                   editable="false"
                                   property="ogrn"
                                   width="500px"/>
                    </hbox>
                    <hbox id="kppHbox"
                          spacing="true">
                        <label id="kppLbl"
                               align="MIDDLE_LEFT"
                               value="msg://ru.spacecorp.mobdekbkp.entity/Company.kpp"
                               width="50px"/>
                        <textField id="kppField"
                                   align="MIDDLE_LEFT"
                                   datasource="suppliersCollectionDs"
                                   editable="false"
                                   property="kpp"
                                   width="500px"/>
                    </hbox>
                    <hbox id="okatoHbox"
                          spacing="true">
                        <label id="okatoLbl"
                               align="MIDDLE_LEFT"
                               value="msg://okato"
                               width="50px"/>
                        <textField id="okatoField"
                                   align="MIDDLE_LEFT"
                                   datasource="suppliersCollectionDs"
                                   editable="false"
                                   property="okato"
                                   width="500px"/>
                    </hbox>
                    <hbox id="innHbox"
                          spacing="true">
                        <label id="innLbl"
                               align="MIDDLE_LEFT"
                               value="msg://ru.spacecorp.mobdekbkp.entity/Company.inn"
                               width="50px"/>
                        <textField id="innField"
                                   align="MIDDLE_LEFT"
                                   datasource="suppliersCollectionDs"
                                   editable="false"
                                   property="inn"
                                   width="500px"/>
                    </hbox>
                    <hbox id="okpoHbox"
                          spacing="true">
                        <label id="okpoLbl"
                               align="MIDDLE_LEFT"
                               value="msg://ru.spacecorp.mobdekbkp.entity/Company.okpo"
                               width="50px"/>
                        <textField id="okpoField"
                                   align="MIDDLE_LEFT"
                                   datasource="suppliersCollectionDs"
                                   editable="false"
                                   property="okpo"
                                   width="500px"/>
                    </hbox>
                </groupBox>
            </tab>
        </tabSheet>
    </layout>
</window>
