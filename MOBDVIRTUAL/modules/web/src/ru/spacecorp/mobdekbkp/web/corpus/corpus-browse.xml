<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="ru.spacecorp.mobdekbkp.web.corpus.CorpusBrowse"
        focusComponent="corpusesTable"
        lookupComponent="corpusesTable"
        messagesPack="ru.spacecorp.mobdekbkp.web.typonominal">
    <dsContext>
        <groupDatasource id="corpusesDs"
                         class="ru.spacecorp.mobdekbkp.entity.Corpus"
                         view="corpusImport-view">
            <query>
                <![CDATA[select e from mobdekbkp$Corpus e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true">
        <groupTable id="corpusesTable"
                    height="100%"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="corpusType"/>
                <column id="corpusMaterial"/>
                <column id="contactCover"/>
            </columns>
            <rows datasource="corpusesDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        caption="msg://add"
                        invoke="onCreateBtnClick"/>
                <button id="editBtn"
                        action="corpusesTable.edit"/>
                <button id="removeBtn"
                        action="corpusesTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
