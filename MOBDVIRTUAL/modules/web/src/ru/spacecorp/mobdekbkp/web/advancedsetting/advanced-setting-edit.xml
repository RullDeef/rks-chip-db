<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="ru.spacecorp.mobdekbkp.web.advancedsetting.AdvancedSettingEdit"
        datasource="advancedSettingDs"
        focusComponent="fieldGroup"
        messagesPack="ru.spacecorp.mobdekbkp.web.advancedsetting">
    <dsContext>
        <datasource id="advancedSettingDs"
                    class="ru.spacecorp.mobdekbkp.entity.AdvancedSetting"
                    view="advancedSetting-view"/>
    </dsContext>
    <dialogMode height="500"
                width="600"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    align="TOP_CENTER"
                    datasource="advancedSettingDs">
            <column width="250px">
                <field property="mass"/>
                <field property="numberPRP"/>
                <field property="technicalSpecificationName"/>
                <field property="technicalSpecificationValue"/>
                <field property="workingLife"/>
                <field property="shelfLife"/>
                <field property="tightness"/>
                <field property="technology"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               align="BOTTOM_CENTER"
               screen="editWindowActions"
               width="AUTO"/>
    </layout>
</window>
