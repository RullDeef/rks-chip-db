<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="ru.spacecorp.mobdekbkp.web.importdocsschemes.ImportDocsSchemesBrowse"
        focusComponent="importDocsSchemesesTable"
        lookupComponent="importDocsSchemesesTable"
        messagesPack="ru.spacecorp.mobdekbkp.web.typonominal">
    <dsContext>
        <groupDatasource id="importDocsSchemesesDs"
                         class="ru.spacecorp.mobdekbkp.entity.ImportDocsSchemes"
                         view="importDocsSchemes-view">
            <query>
                <![CDATA[select e from mobdekbkp$ImportDocsSchemes e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true">
        <label value="msg://reference"/>
        <groupTable id="importDocsSchemesesTable"
                    height="100%"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="iTM"/>
            </columns>
            <rows datasource="importDocsSchemesesDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        caption="msg://add"
                        invoke="onCreateBtnClick"/>
                <button id="editBtn"
                        action="importDocsSchemesesTable.edit"/>
                <button id="removeBtn"
                        action="importDocsSchemesesTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
