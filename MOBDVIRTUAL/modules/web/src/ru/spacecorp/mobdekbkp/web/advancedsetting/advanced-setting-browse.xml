<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="ru.spacecorp.mobdekbkp.web.advancedsetting.AdvancedSettingBrowse"
        focusComponent="advancedSettingsTable"
        lookupComponent="advancedSettingsTable"
        messagesPack="ru.spacecorp.mobdekbkp.web.typonominal">
    <dsContext>
        <groupDatasource id="advancedSettingsDs"
                         class="ru.spacecorp.mobdekbkp.entity.AdvancedSetting"
                         view="advancedSetting-view">
            <query>
                <![CDATA[select e from mobdekbkp$AdvancedSetting e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true">
        <groupTable id="advancedSettingsTable"
                    height="100%"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="mass"/>
                <column id="workingLife"/>
                <column id="technology"/>
            </columns>
            <rows datasource="advancedSettingsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        caption="msg://add"
                        invoke="onCreateBtnClick"/>
                <button id="editBtn"
                        action="advancedSettingsTable.edit"/>
                <button id="removeBtn"
                        action="advancedSettingsTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
