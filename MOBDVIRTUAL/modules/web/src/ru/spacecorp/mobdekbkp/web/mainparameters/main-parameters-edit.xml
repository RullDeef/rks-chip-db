<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="ru.spacecorp.mobdekbkp.web.mainparameters.MainParametersEdit"
        datasource="mainParametersDs"
        focusComponent="fieldGroup"
        messagesPack="ru.spacecorp.mobdekbkp.web.mainparameters">
    <dsContext>
        <datasource id="mainParametersDs"
                    class="ru.spacecorp.mobdekbkp.entity.MainParameters"
                    view="mainParameters-view"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="mainParametersDs">
            <column width="250px">
                <field property="tPlus"/>
                <field property="tMinus"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
