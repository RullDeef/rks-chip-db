<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="ru.spacecorp.mobdekbkp.web.outerdbrefuse.OuterDbRefuseBrowse"
        focusComponent="outerDbRefusesTable"
        lookupComponent="outerDbRefusesTable"
        messagesPack="ru.spacecorp.mobdekbkp.web.typonominal">
    <dsContext>
        <groupDatasource id="outerDbRefusesDs"
                         class="ru.spacecorp.mobdekbkp.entity.OuterDbRefuse"
                         view="outerDbRefuse-view">
            <query>
                <![CDATA[select e from mobdekbkp$OuterDbRefuse e]]>
            </query>
        </groupDatasource>
        <groupDatasource id="outerRejectionsDs"
                         class="ru.spacecorp.mobdekbkp.entity.OuterRejection"
                         view="outerRejection-view">
            <query>
                <![CDATA[select e from mobdekbkp$OuterRejection e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true">
        <hbox height="100%"
              spacing="true">
            <scrollBox height="100%">
                <groupBox height="100%"
                          spacing="true">
                    <groupTable id="outerDbRefusesTable"
                                height="100%"
                                width="100%">
                        <actions>
                            <action id="create"/>
                            <action id="edit"/>
                            <action id="remove"/>
                        </actions>
                        <columns>
                            <column id="provider"/>
                            <column id="produceDate"/>
                            <column id="checked"/>
                            <column id="refused"/>
                            <column id="failed"/>
                            <column id="importDevice"/>
                        </columns>
                        <rows datasource="outerDbRefusesDs"/>
                        <rowsCount/>
                        <buttonsPanel id="buttonsPanel"
                                      alwaysVisible="true">
                            <button id="createBtn"
                                    caption="msg://add"
                                    invoke="onCreateOuterDbRefuseClick"/>
                            <button id="editBtn"
                                    action="outerDbRefusesTable.edit"/>
                            <button id="removeBtn"
                                    action="outerDbRefusesTable.remove"/>
                        </buttonsPanel>
                    </groupTable>
                </groupBox>
            </scrollBox>
        </hbox>
        <hbox height="100%"
              spacing="true">
            <scrollBox height="100%">
                <groupBox height="100%"
                          spacing="true">
                    <groupTable id="outerRejectionsTable"
                                height="100%"
                                width="100%">
                        <actions>
                            <action id="edit"/>
                            <action id="remove"/>
                        </actions>
                        <columns>
                            <column id="checked"/>
                            <column id="rejected"/>
                            <column id="reason"/>
                            <column id="comment"/>
                        </columns>
                        <rows datasource="outerRejectionsDs"/>
                        <buttonsPanel>
                            <button id="createButton"
                                    caption="msg://add"
                                    invoke="onCreateOuterRejectionClick"/>
                            <button id="editButton"
                                    action="outerRejectionsTable.edit"/>
                            <button id="removeButton"
                                    action="outerRejectionsTable.remove"/>
                        </buttonsPanel>
                    </groupTable>
                </groupBox>
            </scrollBox>
        </hbox>
    </layout>
</window>
