<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="ru.spacecorp.mobdekbkp.web.applicabilitydevices.ApplicabilityDevicesEdit"
        datasource="applicabilityDevicesDs"
        focusComponent="fieldGroup"
        messagesPack="ru.spacecorp.mobdekbkp.web.applicabilitydevices">
    <dsContext>
        <datasource id="applicabilityDevicesDs"
                    class="ru.spacecorp.mobdekbkp.entity.ApplicabilityDevices"
                    view="applicabilityDevices-view"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    align="TOP_CENTER"
                    datasource="applicabilityDevicesDs">
            <column width="250px">
                <field property="equipment"/>
                <field property="companyDeveloperHardware"/>
                <field property="productRKT"/>
                <field property="primeDeveloper"/>
                <field property="approvalYear"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               align="MIDDLE_CENTER"
               screen="editWindowActions"
               width="AUTO"/>
    </layout>
</window>
